@page
@model Shop.UI.Pages.Admin.IndexModel
@{
}

<div id="app" class="container">
    <div v-if="!editing">
        <button class="button" @@click="newProduct">Add Student</button>
        <table class="table">
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>Surname</td>
                <td>Group</td>
                <td>Payment per year</td>
            </tr>
            <tr v-for="(product, index) in products">
                <td>{{product.id}}</td>
                <td>{{product.name}}</td>
                <td>{{product.author}}</td>
                <td>{{product.genre}}</td>
                <td>{{product.value}}</td>
                    <td><a @@click="editProduct(product.id, index)">Edit</a></td>
                    <td><a @@click="deleteProduct(product.id, index)">Remove</a></td>

            </table>

        </div>

    <div v-else>
        <div class="field">
            <label class="label">Name</label>
            <div class="control">
                <input class="input" v-model="productModel.name" />
            </div>
        </div>
        <div class="field">
            <label class="label">Surname</label>
            <div class="control">
                <input class="input" v-model="productModel.author" />
            </div>
        </div>
        <div class="field">
            <label class="label">Group</label>
            <div class="control">
                <input class="input" v-model="productModel.genre" />
            </div>
        </div>
        <div class="field">
            <label class="label">Departament</label>
            <div class="control">
                <input class="input" v-model="productModel.description" />
            </div>
        </div>
        <div class="field">
                <label class="label">Payment per year</label>
                <div class="control">
                    <input class="input" v-model.number="productModel.value" />
                </div>
            </div>

            <button class="button is-success" @@click="createProduct" v-if="!productModel.id">Add Student</button>
            <button class="button is-warning" @@click="updateProduct" v-else>Update</button>
            <button class="button" @@click="cancel">Cancel</button>
        </div>
    </div>



    @section scripts{

        <script src="~/js/admin/products.js"></script>
    }
