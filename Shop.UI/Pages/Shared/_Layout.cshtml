<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Книгарня-читальня</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
        <link href="~/lib/bulma/css/bulma.css" rel="stylesheet" />
    </environment>
    <environment include="Production">
        <link href="~/lib/bulma/css/bulma.min.css" rel="stylesheet" />
    </environment>
</head>
<body>

    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" asp-page="/Index">

                <img src="~/images/bulma-logo.png" width="112" height="28" />
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">

                @if (User.Identity.IsAuthenticated)
                {

                    <a class="navbar-item" asp-page="/Admin/Index">Admin</a>
                }
            </div>

            <div class="navbar-end">
                <vc:cart view="Small"></vc:cart>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-item" asp-controller="Account" asp-action="Logout">Вийти</a>
                }
                else
                {
                    <a class="navbar-item" asp-page="/Accounts/Login">Увійти</a>
                }
            </div>
        </div>
    </nav>

    
    
    

    <header>
        <partial name="_CookieConsentPartial" />
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Книгарня-читальня - Гладковський Вячеслав - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>